<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>control</servlet-name>
        <servlet-class>acciones.Control</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>obtenCanciones</servlet-name>
        <servlet-class>acciones.ObtenCanciones</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>obtenCancion</servlet-name>
        <servlet-class>acciones.ObtenCancion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>obtenGenerosCanciones</servlet-name>
        <servlet-class>acciones.ObtenGenerosCanciones</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>obtenCancionesGenero</servlet-name>
        <servlet-class>acciones.ObtenCancionesGenero</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>agregaCancion</servlet-name>
        <servlet-class>acciones.AgregaCancion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>actualizaCancion</servlet-name>
        <servlet-class>acciones.ActualizaCancion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eliminaCanciones</servlet-name>
        <servlet-class>acciones.EliminaCanciones</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>obtenCancionesPeriodo</servlet-name>
        <servlet-class>acciones.ObtenCancionesPeriodo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>obtenCancionEditar</servlet-name>
        <servlet-class>acciones.obtenCancionEditar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>control</servlet-name>
        <url-pattern>/control</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>obtenCanciones</servlet-name>
        <url-pattern>/obtenCanciones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>obtenCancion</servlet-name>
        <url-pattern>/obtenCancion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>obtenGenerosCanciones</servlet-name>
        <url-pattern>/obtenGenerosCanciones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>obtenCancionesGenero</servlet-name>
        <url-pattern>/obtenCancionesGenero</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>agregaCancion</servlet-name>
        <url-pattern>/agregaCancion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actualizaCancion</servlet-name>
        <url-pattern>/actualizaCancion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eliminaCanciones</servlet-name>
        <url-pattern>/eliminaCanciones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>obtenCancionesPeriodo</servlet-name>
        <url-pattern>/obtenCancionesPeriodo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>obtenCancionEditar</servlet-name>
        <url-pattern>/obtenCancionEditar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>
</web-app>
